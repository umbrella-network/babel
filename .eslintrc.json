{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "quotes": [2, "single", { "avoidEscape": true }],
    "max-len": ["error", { "code": 120, "tabWidth": 2 }],
    "semi": ["error", "always"],
    "indent": ["error", 2]
  }
}
